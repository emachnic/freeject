<!DOCTYPE html>
<html>
  <head>
    <title>Freeject</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id='container'>
      <% if current_user %>
        <header class='full'>
          <%= render 'layouts/header' %>
          <% if notice %>
            <p class="success"><%= notice %></p>
          <% elsif alert %>
            <p class="error"><%= alert %></p>
          <% end %>
        </header>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
